<h1>LOA Status:</h1>
<h3>Enter how you want to filter the LOA Status List:</h3>
<div class="row 200%">
    <div class="6u$ 12u$(medium)">
        <tr>
            <form class="changeServer" action = 'LOA_Status' method="GET">
                <td>
                    <div>LOA: <select name="loa" id="loa">
                                        <option value="none">None</option>
                                    {{#each LOA}}
                                        <option value="{{this.id}}">{{this.number}}</option>
                                    {{/each}}
                                </select>
                    </div>
                </td>
                <td>
                    <input type="submit" name="LOA_Sort" value="Filter">
                </td>
            </form>
        </tr>
        <tr>
            <form class="changeServer" action = 'LOA_Status' method="GET">
                <td>Status: <select name="loa" id="loa">
                                    <option value='none'>None</option>
                                    <option value='over'>Over Budget</option>
                                    <option value='under'>Under Budget</option>
                            </select>
                </td>
                <td>
                    <input type="submit" name="LOA_Budget" value="Filter">
                </td>
            </form>
        </tr>
    </div>
</div>

<h2>LOA List:</h2>
<table id = 'reportList'>
    <tr>
        <th>LOA</th>
        <th>Total Budget ($) </th>
        <th>Total Spent ($)</th>
        <th>Over Budget?</th>
    </tr>
    {{#each data}}
    <tr>
        <td>{{this.number}}</td>
        <td>{{this.total_budget}}</td>
        <td>{{this.total_spent}}</td>
        <td>{{this.cur_status}}</td>
    </tr>
    {{/each}}
</table>


<script src="/js/LOA_Status.js"></script>